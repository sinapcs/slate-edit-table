{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-shadow": "error",
    "no-duplicate-imports": "error",
    "no-var": "error",
    "prefer-const": "error",
    "object-shorthand": "error",
    "no-useless-rename": "error",
    "no-use-before-define": ["error", { "functions": false }]
  },
  "plugins": ["flowtype"],
  "env": {
    "mocha": true,
    "node": true,
  }
}
